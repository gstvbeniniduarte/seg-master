---
import "../styles/main.css";

const {
  title = "SEG - Assessoria em Transportes",
  description = "HÃ¡ 22 anos atendendo com confiabilidade e rapidez.",
} = Astro.props;
---

<html lang="pt-BR">
  <head>
    <script
      type="text/partytown"
      async
      src="https://www.googletagmanager.com/gtag/js?id=G-2PK46XYXHP"
      is:inline></script>

    <script type="text/partytown" is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }

      gtag("js", new Date());

      gtag("config", "G-2PK46XYXHP");

      gtag("event", "conversion", {
        send_to: "AW-16717148219/l8PwCImKhNcZELvgraM-",
        transaction_id: "",
      });
    </script>
    <meta charset="utf-8" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>

  <body id="top">
    <div class="preloader">
      <div class="circle"></div>
      <p class="text">AGUARDE</p>
    </div>

    <slot />

    <script>
      const preloader = document.querySelector(".preloader");

      window.addEventListener(
        "load",
        () => {
          requestAnimationFrame(() => {
            preloader?.classList.add("loaded");
            document.body.classList.add("loaded");
          });
        },
        { once: true }
      );
    </script>
  </body>
</html>
