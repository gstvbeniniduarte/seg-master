            </article>
          </li>
        </li>
      </ul>
    </section>
  </main>
  <Footer />
</PrimaryLayout>

<style>
  section {
    display: grid;
    gap: 3rem;
    margin: 10vh auto 3rem;
  }

  .main-heading {
    display: grid;
  }

  ul,
  .list {
    display: grid;
  }

  ul,
  .main-heading {
    gap: 0.75rem;
  }

  .list {
    gap: 1.5rem;
  }

  p,
  li {
    max-width: 75ch;
  }

  p,
  span,
  .sub-list li {
    opacity: 0.85;
  }

  article {
    display: grid;
    gap: 0.75rem;
  }

  h1,
  h2 {
    font-family: var(--ff-heading);
  }

  h1 {
    font-size: var(--fs-heading-3);
    color: var(--clr-accent-400);
  }

  a {
    color: var(--clr-accent-100);
    text-decoration: underline;
  }

  .sub-list {
    padding-left: 1.25rem;
  }

  span {
    font-size: var(--fs-extra-small);
  }

  :not(h1, h2) {
    line-height: 1.6;
  }

  @media (min-width: 1024px) {
    section {
      margin-top: 20vh;
    }
  }
</style>
