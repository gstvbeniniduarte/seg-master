---
import PrimaryLayout from "../layouts/PrimaryLayout.astro";
import Header from "../components/shared/Header.astro";
import Hero from "../components/shared/Hero.astro";
import Divider from "../components/ui/Divider.astro";
import Services from "../components/shared/Services.astro";
import Testimonials from "../components/shared/Testimonials.astro";
import About from "../components/shared/About.astro";
import FAQ from "../components/shared/FAQ.astro";
import Budget from "../components/shared/Budget.astro";
import WhatsappIcon from "../components/ui/WhatsappIcon.astro";
import Footer from "../components/shared/Footer.astro";
---

<PrimaryLayout>
  <Header />
  <main class="layout">
    <Hero />
    <Divider />
    <Services />
    <Divider />
    <Testimonials />
    <About />
    <FAQ />
    <Divider />
    <Budget />

    <a
      href="https://wa.me/5567984012222"
      target="_blank"
      rel="noopener noreferrer"
      id="cta-contact-btn"
      aria-label="voltar ao inicio"
      role="button"
    >
      <WhatsappIcon />
    </a>
    <Footer />
  </main>
</PrimaryLayout>
